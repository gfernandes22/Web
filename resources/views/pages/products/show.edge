        @each(image in product.images)
          <img src="{{ route('images.show', { name: image.name })}}" alt="Imagem de {{ product.name }}"class="w-full max-w-md mx-auto rounded-lg shadow-md mb-4">
        @endeach
      
      @else
        <p class="text-gray-500">Este produto ainda não possui imagens.</p>
      @endif
      
    </div>

  </div>

  <div style="margin-top: 20px;">
    <a href="{{ route('products.index') }}" class="button">Voltar</a>

